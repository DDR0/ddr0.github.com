	def blogContent
		counter = 1;
		buffer = Dir.glob(Dir.getwd+'/Blog Posts/*.html').
			sort!.last(5000). #We won't figure out multiple pages until we have to.
			map{|f| File.read(f)}.
			each{|f| f.gsub!("~/", "Blog Posts/%02d/" % counter); counter+=1}.
			reverse!.join("\n\n\n\n\n\n<hr>\n\n\n\n\n\n")
	end

